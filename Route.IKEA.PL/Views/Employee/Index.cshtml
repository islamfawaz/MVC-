@model IEnumerable<Route.IKEA.BLL.Models.EmployeeDto>

@{
    ViewData["Title"] = "Employee List";
}

@if (!string.IsNullOrEmpty(TempData["message"] as string))
{
    <div class="toast show position-fixed top-1 end-0 bg-success m-3" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">IKEA</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body text-white">
            @TempData["message"]
        </div>
    </div>
}

<h2>Employee List</h2>

<form method="get" asp-action="Index">
    <div class="form-group">
        <input type="text" id="SearchInput" name="searchTerm" value="@ViewData["SearchTerm"]" class="form-control my-2" placeholder="Search by Name" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary">Clear</a>
</form>

<div id="employeeTableContainer">
    <partial name="PartialViews/EmployeeTablePartialView" model="Model" />
</div>

<a asp-action="Create" class="btn btn-success mt-3">Create New Employee</a>

@section Scripts {
    <script>
        $(document).ready(function () {
            const searchBar = $("#SearchInput");
            const tableContainer = $('#employeeTableContainer');

            searchBar.on('keyup', function (event) {
                var searchValue = searchBar.val();
                $.ajax({
                    url: '@Url.Action("Index", "Employee")',
                    type: 'GET',
                    data: { searchTerm: searchValue },
                    success: function (result) {
                        tableContainer.html(result); 
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });
            });
        });
    </script>
}
