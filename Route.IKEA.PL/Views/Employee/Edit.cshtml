@model UpdatedEmployeeDto

@{
    ViewData["Title"] = "Edit";
}



<h1>Edit Employee</h1>


<form asp-action="Edit">

    <div asp-validation-summary="ModelOnly" class="fw-bold text-danger"></div>


    <div class="form-group ">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" re />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label class="col-form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label class="col-form-label" asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>


    <div class="form-group ">
        <label class="col-form-label" asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label class="col-form-label" asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>


    <div class="form-group ">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group ">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input asp-for="HiringDate" type="date" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>


    <div class="d-flex justify-content-between p-4">

        <div class="form-check ">
            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
            <label class="form-check-label" asp-for="IsActive"></label>
        </div>

        @* ------------------------------ *@

        <div>
            <span asp-validation-for="Gender" class="text-danger"></span>
            <div class="form-check">
                <input type="radio" asp-for="Gender" value="Male" class="form-check-input" />
                <label class="form-check-label" for="Gender">Male</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Gender" id="female" value="Female" class="form-check-input" />
                <label class="form-check-label" for="female">Female</label>
            </div>
        </div>
        @* ------------------------------ *@
        <div>
            <span asp-validation-for="EmployeeType" class="text-danger"></span>
            <div class="form-check">
                <input type="radio" asp-for="EmployeeType" value="FullTime" class="form-check-input" />
                <label class="form-check-label" for="EmployeeType">Full Time Employee</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="EmployeeType" id="part" value="PartTime" class="form-check-input" />
                <label class="form-check-label" for="part">Part Time Employee</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="EmployeeType" id="InterShip" value="InterShip" class="form-check-input" />
                <label class="form-check-label" for="InterShip">InterShip</label>
            </div>
        </div>


    </div>


    <div class="pt-5">

        <input type="submit" value="Save" class="btn btn-success fw-bold" />
        <a asp-action="Index" class="btn btn-outline-danger fw-bold">Cancel</a>

    </div>
</form>


@section ValidationScripts {
    <partial name="_ValidationScriptsPartial" />
}