@model EmployeeDetailsDto

<h1>Employee Details</h1>

<!-- Bootstrap Tabs -->
<ul class="nav nav-tabs" id="EmployeeTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>

<!-- Tab Content -->
<div class="tab-content" id="myTabContent">

    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">

            <div class="form-group ">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>

            <div class="form-group ">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="form-group ">
                <label class="col-form-label" asp-for="Address"></label>
                <input asp-for="Address" class="form-control" readonly />
            </div>


            <div class="form-group ">
                <label class="col-form-label" asp-for="Age"></label>
                <input asp-for="Age" class="form-control" readonly />
            </div>

            <div class="form-group ">
                <label class="col-form-label" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" readonly />
            </div>


            <div class="form-group ">
                <label class="col-form-label" asp-for="HiringDate"></label>
                <input asp-for="HiringDate" class="form-control" readonly />
            </div>

            <div class="form-group ">
                <label class="col-form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly />
            </div>

            <div class="form-group ">
                <label class="col-form-label" asp-for="DepartmentName"></label>
                @if(Model.DepartmentId == null)
                {
                <input value="Null" class="form-control" readonly />
                }
                else 
                {
                <input asp-for="DepartmentName" class="form-control" readonly />
                }
            </div>


            

            <div class="d-flex justify-content-between p-4">

                <div class="form-check ">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" disabled />
                    <label class="form-check-label" asp-for="IsActive"></label>
                </div>

                @* ------------------------------ *@

                <div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                    <div class="form-check">
                        <input type="radio" asp-for="Gender" value="Male" class="form-check-input" disabled />
                        <label class="form-check-label" for="Gender">Male</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="Gender" id="female" value="Female" class="form-check-input" disabled />
                        <label class="form-check-label" for="female">Female</label>
                    </div>
                </div>
                @* ------------------------------ *@
                <div>
                    <span asp-validation-for="EmployeeType" class="text-danger"></span>
                    <div class="form-check">
                        <input type="radio" asp-for="EmployeeType" value="FullTime" class="form-check-input" disabled />
                        <label class="form-check-label" for="EmployeeType">Full Time Employee</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="EmployeeType" id="part" value="PartTime" class="form-check-input" disabled />
                        <label class="form-check-label" for="part">Part Time Employee</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="EmployeeType" id="InterShip" value="InterShip" class="form-check-input" disabled />
                        <label class="form-check-label" for="InterShip">InterShip</label>
                    </div>
                </div>


            </div>

        </div>
    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="row">
            <!-- Created By -->
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" readonly />
            </div>

            <!-- Created On -->
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control" readonly />
            </div>

            <!-- Last Modified By -->
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly />
            </div>

            <!-- Last Modified On -->
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" readonly />
            </div>
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>