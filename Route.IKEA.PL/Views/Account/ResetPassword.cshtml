@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";

    // Ensure TempData values for email and token are retained
    TempData.Keep("email");
    TempData.Keep("token");
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly"></div>

            <!-- Password Input Field -->
            <input class="text" asp-for="Password" placeholder="Password" required="">

            <!-- Confirm Password Input Field -->
            <input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">

            <!-- Submit Button -->
            <input type="submit" value="Reset Password">
        </form>
    </div>
</div>

@section ValidationScripts {
    <partial name="_ValidationScriptsPartial" />
}
